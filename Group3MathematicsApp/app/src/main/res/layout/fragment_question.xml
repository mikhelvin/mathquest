<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"

    tools:context="sfu.ca.group3mathematicsapp.QuestionFragment">


    <TextView
        android:id="@+id/QuestionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:text="GENERIC TITLE"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/QuestionContext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/QuestionTitle"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="GENERIC QUESTION CONTEXT"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/QuestionContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/QuestionContext"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="GENERIC QUESTION CONTENTS"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/QuestionConsole"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="bottom"
        android:text="GENERIC CONSOLE MESSAGE"
        android:background="@color/blk"
        android:textColor="@color/lightBlue" />

    <TextView
        android:id="@+id/ConsoleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/QuestionConsole"
        android:gravity="center"
        android:text="@string/console"
        android:textColor="@color/colorAccent"
        android:background="@color/blk"
        android:textStyle="bold" />


</RelativeLayout>
